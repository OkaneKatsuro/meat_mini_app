{
  "name": "meat-warehouse-tg",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "npm run db:generate && npm run build:packages && turbo run build",
    "build:packages": "npm run build --workspace=packages/database",
    "db:generate": "npm run db:generate --workspace=packages/database",
    "vercel-build": "npm run db:generate && npm run build:packages && turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^2.3.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.9.0"
}